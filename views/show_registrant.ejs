<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Peserta - Reservasi Itikaf</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        .filters {
            margin-bottom: 20px;
            display: flex;
            gap: 20px;
            align-items: center;
        }
        .filter-group {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        select, input[type="date"] {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #f5f5f5;
        }
        .actions {
            display: flex;
            gap: 10px;
        }
        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
        }
        .btn-primary {
            background-color: #4CAF50;
            color: white;
        }
        .btn-danger {
            background-color: #f44336;
            color: white;
        }
        .btn-download {
            background-color: #2196F3;
            color: white;
        }
        .btn:hover {
            opacity: 0.9;
        }
        .logout-btn {
            position: absolute;
            top: 20px;
            right: 20px;
        }
    </style>
</head>
<body>
    <a href="/admin/logout" class="btn btn-danger logout-btn">Logout</a>
    <h1>Daftar Peserta Itikaf</h1>
    
    <div class="filters">
        <div class="filter-group">
            <label for="date">Tanggal:</label>
            <input type="date" id="date" name="date">
        </div>
        <div class="filter-group">
            <label for="gender">Jenis Kelamin:</label>
            <select id="gender" name="gender">
                <option value="">Semua</option>
                <option value="laki-laki">Laki-laki</option>
                <option value="perempuan">Perempuan</option>
            </select>
        </div>
        <button class="btn btn-primary" onclick="applyFilters()">Terapkan Filter</button>
        <button class="btn btn-download" onclick="downloadData()">Download Data</button>
    </div>

    <table id="registrantTable">
        <thead>
            <tr>
                <th>Nama</th>
                <th>Email</th>
                <th>Jenis Kelamin</th>
                <th>Tanggal Reservasi</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody id="registrantList">
        </tbody>
    </table>

    <script>
        // Load initial data
        loadRegistrants();

        function loadRegistrants(date = '', gender = '') {
            fetch(`/admin/registrants?date=${date}&gender=${gender}`)
                .then(response => response.json())
                .then(data => {
                    const tbody = document.getElementById('registrantList');
                    tbody.innerHTML = '';
                    
                    data.forEach(registrant => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${registrant.name}</td>
                            <td>${registrant.email}</td>
                            <td>${registrant.gender}</td>
                            <td>${registrant.reservation_date}</td>
                            <td>
                                <button class="btn btn-danger" onclick="deleteRegistrant('${registrant.id}')">Hapus</button>
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                })
                .catch(error => console.error('Error:', error));
        }

        function applyFilters() {
            const date = document.getElementById('date').value;
            const gender = document.getElementById('gender').value;
            loadRegistrants(date, gender);
        }

        function deleteRegistrant(id) {
            if (confirm('Apakah Anda yakin ingin menghapus peserta ini?')) {
                fetch(`/admin/registrant/${id}`, {
                    method: 'DELETE',
                })
                .then(response => {
                    if (response.ok) {
                        applyFilters(); // Reload the table
                    } else {
                        alert('Gagal menghapus peserta');
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        }

        function downloadData() {
            const date = document.getElementById('date').value;
            const gender = document.getElementById('gender').value;
            window.location.href = `/admin/download?date=${date}&gender=${gender}`;
        }
    </script>
</body>
</html>