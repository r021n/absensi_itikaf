<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Halaman Awal - Reservasi Itikaf</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-gradient: linear-gradient(135deg, #4caf50, #45a049);
        --primary-hover-gradient: linear-gradient(135deg, #45a049, #388e3c);
        --danger-gradient: linear-gradient(135deg, #f44336, #e53935);
        --danger-hover-gradient: linear-gradient(135deg, #e53935, #d32f2f);
        --info-gradient: linear-gradient(135deg, #2196f3, #1976d2);
        --info-hover-gradient: linear-gradient(135deg, #1976d2, #1565c0);
        --bg-color: #f9f9f9;
        --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        --border-radius: 12px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background-color: var(--bg-color);
        color: #333;
        line-height: 1.6;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
      }

      .container {
        padding: 20px;
      }

      h1 {
        margin: 30px 0;
        font-weight: 600;
        color: #2c3e50;
        font-size: 2.5rem;
      }

      .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 25px;
        margin: 40px 0;
      }

      .stat-box {
        background-color: white;
        padding: 25px;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .stat-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      }

      .stat-box h3 {
        color: #2c3e50;
        margin-bottom: 15px;
        font-weight: 500;
      }

      .stat-box p {
        font-size: 2rem;
        font-weight: 600;
        color: var(--primary-color);
      }

      .buttons-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
      }

      .btn {
        padding: 15px 30px;
        border: none;
        border-radius: var(--border-radius);
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: var(--box-shadow);
      }

      .btn-primary {
        background-image: var(--primary-gradient);
        color: white;
      }

      .btn-primary:hover {
        background-image: var(--primary-hover-gradient);
        transform: translateY(-3px);
      }

      .btn-danger {
        background-image: var(--danger-gradient);
        color: white;
      }

      .btn-danger:hover {
        background-image: var(--danger-hover-gradient);
        transform: translateY(-3px);
      }

      .btn-info {
        background-image: var(--info-gradient);
        color: white;
      }

      .btn-info:hover {
        background-image: var(--info-hover-gradient);
        transform: translateY(-3px);
      }

      @keyframes pulse {
        0% {
          transform: scale(1);
          box-shadow: var(--box-shadow);
        }
        50% {
          transform: scale(1.05);
          box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }
        100% {
          transform: scale(1);
          box-shadow: var(--box-shadow);
        }
      }

      .btn-pulse {
        animation: pulse 2s infinite;
      }

      .footer {
        margin-top: 50px;
        font-size: 0.9rem;
        color: #777;
      }

      @media (max-width: 768px) {
        h1 {
          font-size: 2rem;
        }

        .stat-box {
          padding: 20px;
        }

        .stat-box p {
          font-size: 1.8rem;
        }

        .btn {
          padding: 12px 25px;
        }
      }

      @media (max-width: 480px) {
        h1 {
          font-size: 1.8rem;
        }

        .stats {
          grid-template-columns: 1fr;
        }

        .buttons-container {
          flex-direction: column;
          width: 100%;
          max-width: 300px;
          margin-left: auto;
          margin-right: auto;
        }

        .btn {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Selamat Datang di Reservasi Itikaf</h1>

      <div class="stats">
        <div class="stat-box">
          <h3>Total Pendaftar</h3>
          <p id="total-count">0</p>
        </div>
        <div class="stat-box">
          <h3>Laki-laki</h3>
          <p id="male-count">0</p>
        </div>
        <div class="stat-box">
          <h3>Perempuan</h3>
          <p id="female-count">0</p>
        </div>
      </div>

      <div class="buttons-container">
        <a href="/register" class="btn btn-primary btn-pulse">Daftar</a>
        <a href="/batal-daftar" class="btn btn-danger">Cek/Batal Daftar</a>
        <a href="/sisa-kuota" class="btn btn-info">Lihat Sisa Kuota</a>
      </div>

      <div class="footer">
        <p>Â© 2025 Masjid Siti Aisyah.</p>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io();

      socket.on("stats", (data) => {
        document.getElementById("total-count").textContent = data.total;
        document.getElementById("male-count").textContent = data.male;
        document.getElementById("female-count").textContent = data.female;
      });

      socket.on("statsUpdate", () => {
        socket.emit("connection");
      });

      // Add animation for stat numbers
      const statNumbers = document.querySelectorAll(".stat-box p");
      statNumbers.forEach((number) => {
        number.style.opacity = "0";
        setTimeout(() => {
          number.style.transition = "opacity 0.5s ease";
          number.style.opacity = "1";
        }, 300);
      });
    </script>
  </body>
</html>
