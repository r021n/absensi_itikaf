<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutorial Pembatalan</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }

      .toggle-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
      }

      .toggle-btn {
        padding: 12px 24px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        background-color: #e0e0e0;
        color: #666;
      }

      .toggle-btn.active {
        background-color: #4caf50;
        color: white;
        box-shadow: 0 2px 4px rgba(0, 123, 65, 0.3);
      }

      .content-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        height: calc(100vh - 120px);
      }

      .yt-container,
      .pdf-container {
        width: 100%;
        height: 100%;
        display: none;
        transition: opacity 0.3s ease;
      }

      .yt-container.active,
      .pdf-container.active {
        display: block;
      }

      .yt-container iframe {
        width: 100%;
        height: 100%;
        border: none;
      }

      .pdf-viewer {
        width: 100%;
        height: 100%;
        border: none;
      }

      @media (max-width: 768px) {
        .toggle-buttons {
          flex-direction: column;
          align-items: center;
          gap: 10px;
        }

        .toggle-btn {
          width: 100%;
          max-width: 300px;
        }

        .content-container {
          height: calc(100vh - 160px);
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="toggle-buttons">
        <button class="toggle-btn active" data-target="text">Versi Teks</button>
        <button class="toggle-btn" data-target="video">Versi Video</button>
      </div>
      <div class="content-container">
        <div class="yt-container">
          <iframe src="https://youtube.com/embed/ge2TBet-mIA"></iframe>
        </div>
        <div class="pdf-container active">
          <iframe
            class="pdf-viewer"
            src="/static/pdf/tutorial.pdf"
            type="application/pdf"
          ></iframe>
        </div>
      </div>
    </div>

    <script>
      document.querySelectorAll(".toggle-btn").forEach((button) => {
        button.addEventListener("click", () => {
          // Remove active class from all buttons and containers
          document
            .querySelectorAll(".toggle-btn")
            .forEach((btn) => btn.classList.remove("active"));
          document
            .querySelectorAll(".yt-container, .pdf-container")
            .forEach((container) => container.classList.remove("active"));

          // Add active class to clicked button
          button.classList.add("active");

          // Show corresponding container
          const target = button.dataset.target;
          if (target === "video") {
            document.querySelector(".yt-container").classList.add("active");
          } else {
            document.querySelector(".pdf-container").classList.add("active");
          }
        });
      });
    </script>
  </body>
</html>
